@page "/"
@using ForTheKing.Persistence
@rendermode InteractiveServer

<PageTitle>ForTheKing</PageTitle>

<StyleSheet />

<div class="game-wrapper">
	<div class="board" style="--size: @GameBoard.MAPLENGTH;">
		@for (int i = 0; i < GameBoard.MAPLENGTH; ++i)
		{
			for (int j = 0; j < GameBoard.MAPLENGTH; ++j)
			{
				int x = j, y = i;
				<Cell X="@x" Y="@y"
					Field="@_viewModel.Fields[j,i]"
					OnClick="(x, y) => Buy(x, y)"/>
			}
		}
	</div>

	<div class="hud">
		<button @onclick=NewGame>New Game</button>
		<p>Game time: @Timer</p>
		<p>Gold earned: @Gold</p>
	</div>
</div>